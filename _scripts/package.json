{
  "private": true,
  "devDependencies": {
    "prettier": "^2.2.1",
    "prettier-plugin-toml": "^0.3.1"
  },
  "prettier": {
    "proseWrap": "always",
    "printWidth": 88,
    "singleQuote": true,
    "tabWidth": 2,
    "overrides": [
      {
        "files": [
          ".yamllint",
          ".condarc"
        ],
        "options": {
          "parser": "yaml"
        }
      }
    ]
  },
  "scripts": {
    "lint:prettier": "prettier \"./*.{md,json,yml}\"/"
  }
}
